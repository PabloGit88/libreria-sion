{% extends 'OdiseoAppBundle:Frontend:layout.html.twig' %}

{% block content %}

    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    <strong>Novedades</strong>
                </h2>
                <hr>
            </div>
            {% for new in news %}
                <div class="col-lg-12 text-center">
                    <img class="img-responsive img-border img-full" src="{{ asset(new.imageName|imagine_filter('image_filter')) }}" alt="">
                    <h2>{{ new.name|raw }}
                        <br>
                        <small>{{ new.createdAt|date('d-m-Y') }}</small>
                    </h2>
                    <p>{{ new.description|raw }}</p>
                    <!--<a href="#" class="btn btn-default btn-lg">Read More</a> -->
                    <hr>
                </div>
            {% endfor %}
            <div class="col-lg-12 text-center">
                <ul class="pager">
                    <li class="previous"><a href="#">&larr; Older</a>
                    </li>
                    <li class="next"><a href="#">Newer &rarr;</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}